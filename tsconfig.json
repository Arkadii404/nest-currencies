{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/coinmarketcap": [
        "libs/coinmarketcap/src"
      ],
      "@app/coinmarketcap/*": [
        "libs/coinmarketcap/src/*"
      ],
      "@app/pdf-renderer": [
        "libs/pdf-renderer/src"
      ],
      "@app/pdf-renderer/*": [
        "libs/pdf-renderer/src/*"
      ],
      "@app/domain": [
        "libs/domain/src"
      ],
      "@app/domain/*": [
        "libs/domain/src/*"
      ]
    }
  }
}